apiVersion: sirato/v1
kind: Service
metadata:
  name: sirato-api
  labels:
    run: sirato-api
spec:
  ports:
  - port: 8090
    protocol: TCP
  selector:
    run: sirato-api

apiVersion: sirato/v1
kind: Deployment
metadata:
  name: sirato-api-deployment
spec:
  selector:
    matchLabels:
      run: sirato-api
  replicas: 1
  template:
    metadata:
      labels:
        run: sirato-api
    spec:
      containers:
      - name: sirato-api
        image: registry.gitlab.com/web3labs/epirus/explorer/api
        ports:
        - containerPort: 8090
        env:
          - name: MONGO_CLIENT_URI
          value: "mongodb://sirato-db:27017"
          - name: MONGO_DB_NAME
          value: "epirus"
          - name: MONGO_CREATE_INDICES
          value: "true"
          - name: NODE_ENDPOINT
            value: "http://ethrpc1.vmbc-client1.svc.cluster.local:8545"
          - name: REINDEX_ENDPOINT
            value: http://sirato-ingestion/reindex/
